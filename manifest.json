{
  "manifest_version": 3,
  "name": "Beyond the Rubble",
  "version": "1.0",
  "description": "Display a random HD background on each new tab.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "background.html",
    "default_icon": "icon.png"
  },
  "chrome_url_overrides": {
    "newtab": "background.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.jpg"
  }
}
